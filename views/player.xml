<odoo>
    <data>
        <!-- explicit list view definition -->

        <!-- Player__________________________________________________________________________________________ -->

        <record model="ir.ui.view" id="kill4city.player_list">
            <field name="name">kill4city Player list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="level" />
                    <!-- <field name="is_plater" /> -->
                    <field name="life" widget="porcentpie" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kill4city.player_form">
            <field name="name">kill4city player Form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="level" />
                            <field name="life" />
                            <field name="level" />
                            <field name="weapon" domain="[('is_weapon', '=', True)]" />
                            <field name="in_city" />
                            <field name="occupied" />
                            <!-- <field name="is_plater" /> -->
                        </group>
                        <notebook>
                            <page string="City">
                                <group>
                                    <field name="in_city" />
                                </group>
                            </page>
                            <page string="Zones" >
                                <group>
                                    <field name="zone_list" domain="[('status', '=', True)]"/>
                                </group>
                            </page>
                            <page string="Weapon">
                                <group>
                                    <field name="weapon" domain="[('is_weapon', '=', True)]" />
                                </group>
                            </page>
                            <page string="Training" autofocus="autofocus">
                                <group>
                                    <field name="training_type" />
                                    <!-- <field name="training_start_time" />
                                    <field name="training_end_time" /> -->
                                <!-- </group>
                                <group> -->
                                    <button name="%(kill4city.training_wizard_action)d" type="action" string="Launch training" class="oe_highlight" 
                                    context="{'player_context': active_id}" attrs="{'invisible':[('occupied','=',True)]}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kill4city.player_kanban">
            <field name="name">Kill4city player kanban</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <!-- <field name="level" />
                    <field name="life" />
                    <field name="level" /> -->
                    <field name="weapon" />
                    <field name="in_city" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="card-body">
                                <div class="card-info">
                                    <a type="open">
                                        <p>
                                            <img src="https://i.pinimg.com/originals/2c/5a/57/2c5a57f4562aff17b9c2142b4b1453e1.gif" alt="Not found"></img>
                                        </p>
                                        <table class="conquer-table">
                                            <tr>
                                                <th colspan="3">
                                                    Name:
                                                    <field name="name" />
                                                </th>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <em>
                                                        Level
                                                    </em>
                                                    <!-- <field name="level" /> -->
                                                    <field name="level" widget="progressbar" />
                                                </td>
                                                <td>
                                                    <em>
                                                    Life
                                                </em>
                                                    <field name="life" widget="progressbar" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <em>
                                                        Power
                                                    </em>
                                                    <!-- <field name="level" /> -->
                                                    <field name="power" widget="progressbar" />
                                                </td>
                                                <td>
                                                    <em>
                                                        Smart
                                                    </em>
                                                    <!-- <field name="level" /> -->
                                                    <field name="smart" widget="progressbar" />
                                                </td>
                                            </tr>
                                        </table>
                                    </a>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record model="ir.ui.view" id="kill4city.player_partner_form">
            <field name="name">Kill4city Player form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Kill4City">
                        <group>
                            <field name="name" />
                            <field name="level" />
                            <field name="life" />
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>

