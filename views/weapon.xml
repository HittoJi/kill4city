<odoo>
    <data>
        <record model="ir.ui.view" id="kill4city.training_wizard_form">
            <field name="name">Buy new gun</field>
            <field name="model">kill4city.buy_weapon_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="weapon" domain="[('is_weapon', '=', True)]" />
                            <field name="player" domain="[('occupied', '=', False),('is_plater', '=', True)]" />
                        </group>
                        <footer>
                            <button name="buy" type="object" string="Buy" class="oe_highlight"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="kill4city.buy_weapon_wizard_action">
            <field name="name">Buy new gun</field>
            <field name="res_model">kill4city.buy_weapon_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <record model="ir.ui.view" id="kill4city.weapon_list">
            <field name="name">Kill4city Player list</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="damage" />
                    <field name="use_by" />
                    <button name="%(kill4city.buy_weapon_wizard_action)d" type="action" string="Buy" class="oe_highlight" context="{'weapon_context': active_id}" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kill4city.weapon_form">
            <field name="name">Kill4city Player list</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="damage" />
                            <!-- <field name="is_weapon"/> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kill4city.weapon_kanban">
            <field name="name">Kill4city Player  kanban</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="damage" />
                    <templates>
                        <t t-name="kanban-box"></t>
                        <h2>
                            <field name="name" />
                        </h2>
                    </templates>
                </kanban>
            </field>
        </record>


        <!-- Formulario herencia -->
        <record model="ir.ui.view" id="kill4city.weapon_partner_list">
            <field name="name">Kill4city Player list</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <!-- <field name="photo" widget="image" class="imgWeaponList"></field> -->
                    <field name="damage" />
                    <field name="use_by" />
                    <field name="is_weapon" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="kill4city.weapon_partner_form">
            <field name="name">Kill4city Player form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Kill4City">
                        <group>
                            <field name="damage" />
                            <field name="use_by" />
                            <field name="is_weapon" />
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
