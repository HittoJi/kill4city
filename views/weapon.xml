<odoo>
    <data>
        <record model="ir.ui.view" id="kill4city.weapon_list">
            <field name="name">Kill4city Player list</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="damage" />
                    <field name="use_by" />
                    <field name="is_weapon"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kill4city.weapon_form">
            <field name="name">Kill4city Player list</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="damage" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kill4city.weapon_kanban">
            <field name="name">Kill4city Player  kanban</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="damage" />
                    <templates>
                        <t t-name="kanban-box"></t>
                        <h2><field name="name" /></h2>
                    </templates>
                </kanban>
            </field>
        </record>


        <!-- Formulario herencia -->
        <record model="ir.ui.view" id="kill4city.weapon_partner_list">
            <field name="name">Kill4city Player list</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <!-- <field name="photo" widget="image" class="imgWeaponList"></field> -->
                    <field name="damage" />
                    <field name="use_by" />
                    <field name="is_weapon" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="kill4city.weapon_partner_form">
            <field name="name">Kill4city Player form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <!-- <field name="name" /> -->
                    <field name="image_1920" />
                    <field name="damage" />
                    <field name="use_by" />
                    <field name="is_weapon" />
                </field>
            </field>
        </record>
    </data>
</odoo>