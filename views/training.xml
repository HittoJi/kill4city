<odoo>
    <data>
        <record model="ir.ui.view" id="kill4city.training_list">
            <field name="name">Kill4city Training list</field>
            <field name="model">kill4city.training</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- <button name="increment" type="object" string="New name" class="oe_highlight" /> -->
                    <field name="player" />
                    <field name="training_type" />
                    <field name="start_time" />
                    <field name="end_time" />
                    <!-- <field name="training_in_process"> [('training_in_process','=',True)]</field> -->

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kill4city.training_form">
            <field name="name">Kill4city Training list</field>
            <field name="model">kill4city.training</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="player"  domain="[('occupied', '=', False),('is_plater', '=', True)]"  />
                            <field name="training_type" />
                            <field name="start_time" />
                            <field name="end_time" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="kill4city.training_kanban">
            <field name="name">Kill4city training kanban</field>
            <field name="model">kill4city.training</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="player" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="card-body">
                                <div class="card-info">
                                    <a type="open">
                                        <p>
                                            <!-- <img src="https://thumbs.gfycat.com/WhiteHonestIrukandjijellyfish-max-1mb.gif" alt="Not found"></img> -->
                                            <img src="/kill4city/static/src/img/training-1.gif" alt="Not found"></img>
                                        </p>
                                        <table class="conquer-table">
                                            <tr>
                                                <th colspan="2">
                                                    <field name="player" />
                                                </th>
                                            </tr>
                                            <tr>
                                                <td colspan="2">
                                                    <em>
                                                        <strong>
                                                            <field name="training_type" />
                                                        </strong>
                                                        Training...
                                                    </em>
                                                    <!-- <field name="level" /> -->
                                                    <field name="training_bar" widget="progressbar" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    Start:
                                                    <strong>
                                                        <field name="start_time" />
                                                    </strong>
                                                </td>
                                                <td>
                                                    End:
                                                    <strong>
                                                        <field name="end_time" />
                                                    </strong>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">
                                                    <div class="button-container-1">
                                                        <span class="mas">Cancel training</span>
                                                        <button id='work' type="object" name="cancel_training">Cancel training</button>
                                                    </div>
                                                    <!-- <button name="cancel_training" type="object" class="cancel_training"/> -->
                                                </td>
                                            </tr>
                                            <!-- <tr>
                                                <td>
                                                        <field name="start_power" /> -
                                                        <field name="start_smart" /> -
                                                        <field name="total_reword" />
                                                </td>
                                                <td>
                                                    <button name="increment" type="object" string="New name" class="oe_highlight" style="padding: 15px 32px;"/>
                                                </td>
                                            </tr> -->
                                        </table>
                                    </a>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record model="ir.actions.act_window" id="kill4city.training_wizard_action">
            <field name="name">Lets create a training</field>
            <field name="res_model">kill4city.training_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.ui.view" id="kill4city.training_wizard_form">
            <field name="name">negocity travel Form</field>
            <field name="model">kill4city.training_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"></field>
                    </header>
                    <sheet>
                        <group states="select_player">
                            <field name="player" domain="[('occupied', '=', False),('is_plater', '=', True)]" />
                            <!-- <field name="training_type" /> -->
                        </group>
                        <group states="select_training">
                            <field name="training_type" />
                        </group>
                        <group states="select_info">
                            <!-- ALL INFO -->
                        </group>
                        <footer>
                            <button name="previous" type="object" string="Previous" class="oe_highlight" states="select_training,select_info" />
                            <button name="next" type="object" string="Next" class="oe_highlight" states="select_player,select_training" />
                            <button name="done" type="object" string="Done" class="oe_highlight" states="select_info"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>