<odoo>
  <data>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="kill4city.action_city_window">
      <field name="name">City</field> <!-- name on top  -->
      <field name="res_model">kill4city.city</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="kill4city.action_zone_window">
      <field name="name">Zone</field> <!-- name on top  -->
      <field name="res_model">kill4city.zone</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="kill4city.action_conquer_window">
      <field name="name">Conquer</field> <!-- name on top  -->
      <field name="res_model">kill4city.conquer</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="kill4city.action_player_window">
      <field name="name">Player</field> <!-- name on top  -->
      <field name="res_model">kill4city.player</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="kill4city.action_weapon_window">
      <field name="name">Weapons</field> <!-- name on top  -->
      <field name="res_model">product.product</field>
      <!-- <field name="view_mode">tree,form</field> -->
      <field name="view_mode">tree,kanban,form</field>
      <field name="domain"> [('is_weapon','=',True)]</field>
      <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('kill4city.weapon_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('kill4city.weapon_partner_form')}),]" />
    </record>

    <record model="ir.actions.act_window" id="kill4city.action_training_window">
      <field name="name">Training</field> <!-- name on top  -->
      <field name="res_model">kill4city.training</field>
      <field name="domain"> [('training_in_process','=',True)]</field>
      <!-- <field name="context">{'training_in_process': True, 'search_default_player_partner': 1}</field> -->
      <field name="view_mode">kanban,tree,form</field>
    </record>


    <!-- Acciones para forzar la vista (herencia) -->

    <!-- server action to the one above -->

    <!-- Top menu item -->
    <menuitem name="Kill4city" id="kill4city.menu_root" />

    <!-- menu categories -->
    <menuitem name="Game" id="kill4city.menu_game" parent="kill4city.menu_root" />
    <menuitem name="Player" id="kill4city.menu_game2" parent="kill4city.menu_root" />

    <!-- actions -->
    <menuitem name="City" id="kill4city.menu_zone_list" parent="kill4city.menu_game" action="kill4city.action_city_window" />
    <menuitem name="Zones" id="kill4city.submenu_zones" parent="kill4city.menu_game" action="kill4city.action_zone_window" />
    <menuitem name="Conquer" id="kill4city.conquer_list" parent="kill4city.menu_game" action="kill4city.action_conquer_window" />
    <menuitem name="Character" id="kill4city.menu_zone3_list" parent="kill4city.menu_game2" action="kill4city.action_player_window" />
    <menuitem name="Weapon" id="kill4city.menu_zone4_list" parent="kill4city.menu_game2" action="kill4city.action_weapon_window" />
    <menuitem name="Training" id="kill4city.menu_training_list" parent="kill4city.menu_game2" action="kill4city.action_training_window" />
    <!-- <menuitem name="List" id="kill4city.menu_zone3_list" parent="kill4city.menu_game" action="kill4city.action_city_window" /> -->
  </data>
</odoo>