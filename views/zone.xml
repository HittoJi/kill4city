<odoo>
    <data>
        <record model="ir.ui.view" id="kill4city.zone_list">
            <field name="name">kill4city Zone list</field>
            <field name="model">kill4city.zone</field>
            <field name="arch" type="xml">
                <tree decoration-danger="level>60">
                    <field name="name" />
                    <field name="level" />
                    <field name="food" />
                    <field name="defense" />
                    <field name="danger" />
                    <field name="conquest" widget="progressbar" />
                    <field name="status" />
                    <field name="in_battle" invisible="1" />
                    <!-- <button name="repair" type="object" string="Repair" class="oe_highlight" /> -->
                    <!-- <button name="zone" string="zone" class="oe_highlight" /> -->
                    <button name="%(kill4city.conquer_wizard_action)d" type="action" string="Launch attack" class="oe_highlight" 
                        context="{'player_context': parent.id, 'zone_context': active_id}" attrs="{'invisible':[('in_battle','=',True)]}"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="kill4city.zone_form">
            <field name="name">kill4city zone Form</field>
            <field name="model">kill4city.zone</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="level" />
                            <field name="food" />
                            <button name="new_name" type="object" string="New name" class="oe_highlight" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>